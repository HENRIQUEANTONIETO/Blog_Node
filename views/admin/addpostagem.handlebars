{{else}}

{{/each}}


<header>
    <header class="masthead" style="background: linear-gradient(to right, #0062E6, #33AEFF); height:350px;">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="page-heading">
                        <h2>Nova postagem</h2>
                    </div>
                </div>
            </div>
        </div>
    </header>
</header>

{{>_arrow-left}}
<div class="container">
    <div class="card">
        <div class="card-body">
            <form action="/admin/postagens/nova" method="POST">
                <label for="titulo">Titulo:</label>
                <input type="text" name="titulo" class="form-control" required>

                <label for="slug">Slug:</label>
                <input type="text" name="slug" class="form-control" required>

                <label for="descricao">Descrição:</label>
                <input type="text" name="descricao" class="form-control" required>

                <label for="conteudo">Conteúdo:</label>
                <textarea name="conteudo" class="form-control" required></textarea>

                <label for="categoria">Categoria:</label>
                <select name="categoria" class="custom-select" required>
                    {{#each categorias}}
                    <option id='categoriaEscolhida' value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
                <br>
                <button type="submit" class="btn btn-success mt-4">Criar Postagem</button>
            </form>
        </div>
    </div>

</div>