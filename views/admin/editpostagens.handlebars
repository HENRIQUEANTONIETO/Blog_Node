{{else}}

{{/each}}

<header>
    <header class="masthead" style="background: linear-gradient(to right, #0062E6, #33AEFF); height:350px;">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="page-heading">
                        <h2>Editar postagem</h2>
                    </div>
                </div>
            </div>
        </div>
    </header>
</header>

{{>_arrow-left}}
<div class="container">
    <div class="card">
        <div class="card-body">
            <h4>Editar postagem:</h4>
            <form action="/admin/postagem/edit" method="POST">
                <input type="hidden" value="{{postagem._id}}" name="id">
                <label for="titulo">Titulo:</label>
                <input required type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">

                <label for="slug">Slug:</label>
                <input required type="text" name="slug" class="form-control" value="{{postagem.slug}}">

                <label for="descricao">Descrição:</label>
                <input required type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">

                <label for="conteudo">Conteúdo:</label>
                <textarea required name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>

                <label for="categoria">Categoria:</label>
                <select name="categoria" class="custom-select">
                    {{#each categorias}}
                    {{#if_eq this._id ../postagem.categoria}}
                    <option value="{{this._id}}" selected>{{this.nome}}</option>
                    {{else}}
                    <option value="{{this._id}}">{{this.nome}}</option>
                    {{/if_eq}}
                    {{/each}}
                </select>
                <br>
                <button type="submit" class="btn btn-success mt-4">Editar Postagem</button>
            </form>
        </div>
    </div>

</div>